<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:padding="5dp"
   android:background="@drawable/shape_list_row"
   android:orientation="vertical">
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp">
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:text="Medicine Name : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="bold"/>
      
      <TextView
         android:id="@+id/medicineLVmedicineNameTV"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:hint="Medicine Name : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="normal"/>
   
   </LinearLayout>
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:text="Start Date : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="bold"/>
      
      <TextView
         android:id="@+id/medicineLVstartDateTV"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:hint="Start Date : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="normal"/>
   </LinearLayout>
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:text="End Date : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="bold"/>
      
      <TextView
         android:id="@+id/medicineLVendDateTV"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:hint="End Date : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="normal"/>
   </LinearLayout>
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:text="Dose : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="bold"/>
      
      <TextView
         android:id="@+id/medicineLVdoseTV"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:hint="Dose: "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="normal"/>
   </LinearLayout>
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      
      <ImageView
         android:id="@+id/medicineLVmorningIV"
         android:layout_width="40px"
         android:layout_height="40px"
         android:layout_marginLeft="10dp"/>
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="Morning"
         android:textColor="@android:color/black"
         android:textSize="14sp"
         android:textStyle="bold"/>
      
      <ImageView
         android:id="@+id/medicineLVafternoonIV"
         android:layout_width="40px"
         android:layout_height="40px"
         android:layout_marginLeft="10dp"/>
      
      <TextView
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="Afternoon"
         android:textColor="@android:color/black"
         android:textSize="14sp"
         android:textStyle="bold"/>
      
      <ImageView
         android:id="@+id/medicineLVeveningIV"
         android:layout_width="40px"
         android:layout_height="40px"
         android:layout_marginLeft="10dp"/>
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="Evening"
         android:textColor="@android:color/black"
         android:textSize="14sp"
         android:textStyle="bold"/>
      
      <ImageView
         android:id="@+id/medicineLVnightIV"
         android:layout_width="40px"
         android:layout_height="40px"
         android:layout_marginLeft="10dp"/>
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="Night"
         android:textColor="@android:color/black"
         android:textSize="14sp"
         android:textStyle="bold"/>
   
   
   </LinearLayout>
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:text="Prescribed by : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="bold"/>
      
      <TextView
         android:id="@+id/medicineLdoctorTV"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:hint="Prescribed By: "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="normal"/>
   </LinearLayout>
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp">
      
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:text="Remarks : "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="bold"/>
      
      <TextView
         android:id="@+id/medicineLremarksTV"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:gravity="center"
         android:hint="remarks: "
         android:textColor="@android:color/black"
         android:textSize="16sp"
         android:textStyle="normal"/>
   </LinearLayout>
</LinearLayout>