<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:layout_gravity="center"
   android:alpha=".95"
   android:background="@drawable/gradient_1"
   android:gravity="center"
   android:orientation="vertical"
   tools:context=".activity.DashBoardActivity">
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5"
      android:background="@drawable/dashboard_details"
      android:orientation="horizontal"
      android:padding="5dp"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin">
      
      <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="3"
         android:orientation="vertical"
         android:padding="5dp">
         
         <TextView
            android:id="@+id/dashBoardNameTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>
         
         <TextView
            android:id="@+id/dashBoardGenderTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:hint="Gender"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
         
         <TextView
            android:id="@+id/dashBoardBloodGroupTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:hint="Blood Group"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
         
         <TextView
            android:id="@+id/dashBoardBirthDateTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:hint="Date of Birth"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
         
         <TextView
            android:id="@+id/dashBoardAgeTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:hint="Age"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
         
         <TextView
            android:id="@+id/dashBoardEmailTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:hint="Email"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
         
         <TextView
            android:id="@+id/dashBoardMobileTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Mobile"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
      
      </LinearLayout>
      
      <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="2"
         android:orientation="vertical">
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/image_view_background"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView
               android:id="@+id/dashBoardProfilePicIV"
               android:layout_width="225px"
               android:layout_height="220px"
               android:layout_gravity="center"
               android:adjustViewBounds="false"
               android:foregroundGravity="center"
               android:scaleType="fitXY"/>
         </LinearLayout>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="5dp">
            
            <TextView
               android:id="@+id/dashBoardHeightTV"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:hint="Height"
               android:textColor="@android:color/black"
               android:textSize="16sp"/>
            
            <TextView
               android:id="@+id/dashBoardWeightTV"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:hint="Weight"
               android:textColor="@android:color/black"
               android:textSize="16sp"/>
            
            <TextView
               android:id="@+id/dashBoardDiseaseTV"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2"
               android:hint="major Disease"
               android:textColor="@android:color/black"
               android:textSize="16sp"/>
         
         </LinearLayout>
      
      
      </LinearLayout>
   
   
   </LinearLayout>
   
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5"
      android:orientation="horizontal"
      android:padding="5dp"
      >
      
      <LinearLayout
         
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical">
         
         <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn"
            android:gravity="center"
            android:onClick="onClickDiet"
            android:text="@string/diet_chart"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />
         
         <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn"
            android:gravity="center"
            android:onClick="onClickVaccination"
            android:text="@string/vaccination"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />
         
         <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn"
            android:gravity="center"
            android:onClick="onClickMedicalHistory"
            android:text="@string/medical_history"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />
      
      </LinearLayout>
      
      <LinearLayout
         
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical">
         
         <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn"
            android:gravity="center"
            android:onClick="onClickDoctors"
            android:text="@string/doctors"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />
         
         <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn"
            android:gravity="center"
            android:onClick="onClickAppointment"
            android:text="@string/doctors_appointment"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />
         
         <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn"
            android:gravity="center"
            android:onClick="onClickMedicineDose"
            android:text="@string/medicine_dose"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />
      
      </LinearLayout>
      
      <LinearLayout
         
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical">
         
         <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn"
            android:gravity="center"
            android:onClick="onClickHospital"
            android:text="@string/hospital_info"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />
         
         <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn"
            android:gravity="center"
            android:onClick="onClickGeneralInfo"
            android:text="@string/general_info"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />
      
      
      </LinearLayout>
   
   </LinearLayout>


</LinearLayout>
